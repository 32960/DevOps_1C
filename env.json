        "--ibconnection": "/F./build/ib",
        "--db-user": "Administrator",
        "--db-pwd": "",
        "--v8version": "8.3.17.1549",
        "--additional": "/DisplayAllFunctions /Lru /iTaxi",
        "--workspace": ".",
        "--ordinaryapp": "-1"
